{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
{% endblock %}

{% block body %}
    {{parent()}}

<main>

 <div class="container">
        <div class="col offset-l4">
{{ form_start(form) }}

				<div class="form-group text-center ">
					{{ form_label(form.codeModule, 'Code du module : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.codeModule, {'attr': {'class': 'form-control'}}
					) }}
					{{ form_label(form.nomModule, 'Nom du module : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.nomModule, {'attr': {'class': 'form-control'}}
					) }}
					{{ form_label(form.classe, 'Classe : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.classe, {'attr': {'class': 'form-control'}}
					) }}
                    {{ form_label(form.nombreEleve, "Nombre d'élèves : ", {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.nombreEleve, {'attr': {'class': 'form-control'}}
					) }}
                    {{ form_label(form.sujet, "Sujet de l'épreuve : ", {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.sujet, {'attr': {'class': 'form-control'}}
					) }}
					<br>
                    {{ form_label(form.duree, "Durée de l'épreuve : ", {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.duree, {'attr': {'class': 'timepicker', 'type': 'text'}}
					) }}
					<br>
                    {{ form_label(form.dateEpreuve, "Date de l'épreuve : ", {'label_attr': {'class': 'datepicker'}}
					) }}
					{{ form_widget(form.dateEpreuve, {'attr': {'class': 'datepicker', 'type': 'text'}}
					) }}
					 
                    
				</div>
                <br>
				
            <div class="form-group center ">
		        {{ form_widget(form.ajoutEpreuve, { 'label': "Ajouter l'épreuve", 'attr': {'class': 'btn text-white text-center'}}) }}
	        </div>
{{ form_end(form) }}
</div>
</div>
</main>
{% block javascripts %}
    {{parent()}}


{% endblock %}
{% endblock %}