{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Liste des épreuves{% endblock %}
{% block content %}


<div class="container-fluid">
            <div class="row justify-content-center">
                <h1 class="text-center  p-4">Liste des épreuves</h1>
            </div>
            <div class="row justify-content-center">
                <div class="col-8 p-4 m-0 ">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        Nom du module
                                    </th>
                                    <th scope="col">
                                        Classe
                                    </th>
                                    <th scope="col">
                                        Nombre d'élève
                                    </th>
                                    <th scope="col">
                                        Sujet
                                    </th>
                                     <th scope="col">
                                        Duree en minute
                                    </th>
                                     <th scope="col">
                                        Date de l'épreuve
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for epreuve in epreuve %}
                                    <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                   
                                        <td>
                                            {{epreuve.getNomModule |capitalize }}
                                        </td>
                                        <td>
                                            {{epreuve.getClasse |capitalize }}
                                        </td>
                                        <td>
                                            {{epreuve.getNombreEleve |capitalize }}
                                        </td>
                                         <td>
                                            {{epreuve.getSujet |capitalize }}
                                        </td>
                                         <td>
                                            {{epreuve.getDuree  |capitalize }}
                                        </td>
                                         <td>
                                             {{epreuve.getDateEpreuve  |date("d/m/Y") }}
                                        </td>
                                        <td>
                                        {% if is_granted('ROLE_ADMIN') %}
    

                                            <a href=""><span class="material-icons">
                                                create
                                            </span></a>
                                        </td>
                                        <td>
                                            <a href="{{path('liste_epreuves',{'supp':epreuve.id})}}" class="text-white">
											<span class="material-icons" title="Supprimer le vocabulaire">
												delete
											</span>
										</a>
                                        </td>
                                    {% endif %}
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
{% if is_granted('ROLE_ADMIN') %}
            {{form(form)}}

{% endif %}
        </div>


{% endblock %}