<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				noteLast
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
																and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
			<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
			<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
			<link href="css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>


		{#<link href="{{ asset('css/your_form_theme.css') }}" rel="stylesheet"/>#}
		{% endblock %}


	</head>
	<body>
		{% block body %}
			<style>
				header,
				main,
				footer {
					padding-left: 300px;
				}

				@media only screen and(max-width : 992px) {
					header,
					main,
					footer {
						padding-left: 0;
					}
				}
			</style>
			<header>
				<nav>
					<div class="nav-wrapper">
						<div class="row">
							<div class="col s12">
								<a href="#" data-target="sidenav-1" class="left sidenav-trigger hide-on-medium-and-up">
									<i class="material-icons">menu</i>
								</a>
								
								<a href="{{path('index')}}" class="brand-logo">noteLast</a>
							</div>
						</div>
					</div>
				</nav>
			</header>


			<!-- LEFT SIDEBAR	 -->
			<ul id="sidenav-1" class="sidenav sidenav-fixed">
			{% if is_granted('IS_AUTHENTICATED_FULLY') %}
			
				<li>
					<a class="subheader">{{app.user.username}}</a>
				</li>
				{% endif %}
				<br>
				<ul class="collapsible">
					<li>
					<div class="collapsible-header"><i class="material-icons">face</i>Eleves</div>

					<div class="collapsible-body">
						<span>
						<ul>
							<li>
								<a href="{{ path('liste_eleves') }}" target="">Liste élèves</a>
							</li>
							{% if is_granted('ROLE_ADMIN') %}
							<li>
								<a href="{{ path('ajout_eleve') }}" target="">Ajouter un élève</a>
							</li>
							{% endif %}
						</ul>
						</span>
					</div>
					</li>
					<li>
					<div class="collapsible-header"><i class="material-icons">description</i>Epreuves</div>
					<div class="collapsible-body">
						<span>
						<ul>
							<li>
								<a href="{{ path('liste_epreuves') }}" target="">Liste des épreuves</a>
							</li>
							{% if is_granted('ROLE_ADMIN') %}
							<li>
								<a href="{{ path('ajout_epreuve') }}" target="">Ajouter une épreuve</a>
							</li>
							{% endif %}
							<li>
								<a href="" target="">Ajouter un élève à une épreuve</a>
							</li>
						</ul>
						</span>
					</div>
					</li>
				</ul>
				<br>		
			</ul>

			<br>



<main>
	{% block content %}
	{% endblock %}
	
</main>



			
				<!--  Scripts-->
				<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
				<script src="js/materialize.js"></script>
				<script src="js/init.js"></script>

				<script>
				$(document).ready(function () {
$('.sidenav').sidenav();
$('#sidenav-1').sidenav({edge: 'left'});

});
				</script>
				<script>
	  $(document).ready(function(){
    $('.datepicker').datepicker();
  });

 var instance = M.Datepicker.getInstance(1);
</script>


	<script>
	$(document).ready(function(){
		$('.timepicker').timepicker();
	});

		var instance = M.Timepicker.getInstance(1);
	</script>


  	<script>
	document.addEventListener('DOMContentLoaded', function() {
    	var elems = document.querySelectorAll('.collapsible');
    	var instances = M.Collapsible.init(elems);
  	});

	  var instance = M.Collapsible.getInstance(1);
  	</script>

	<script>
	    $(document).ready(function(){
    $('.materialboxed').materialbox();
  });
	</script>

	{% endblock %}
		
	</body>
</html>
