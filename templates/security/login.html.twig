{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Connexion{% endblock %}

{% block content %}

<div class="container">
	<div class="row offset-l4">
		<div class="col l6 offset-l3">
			<div class="">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="center">
            Vous êtes connécté en tant que  {{ app.user.username }}, <a href="{{ path('app_logout') }}">se déconnecter.</a>
        </div>
    {% endif %}

    <div class="center">
		<h1 class="text-center"><strong>Connectez-vous</strong></h1>
		<br>
	</div>
    <label class="center-align" for="inputUsername">Adresse mail</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
    <label class="center-align" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
  




    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary center-align" type="submit">
        Se connecter
    </button>
</form>

	</div>
	</div>
</div>  
{% endblock %}
