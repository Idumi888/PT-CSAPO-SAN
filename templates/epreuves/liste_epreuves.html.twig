{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Liste des épreuves{% endblock %}

{% block content %}


<div class="container-fluid">
            <div class="row justify-content-center">
                <h1 class="text-center  p-4">Liste des épreuves</h1>
            </div>
            <div class="row justify-content-center">
                <div class="col-8 p-4 m-0 ">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        Nom du module
                                    </th>
                                    <th scope="col">
                                        Classe
                                    </th>
                                    <th scope="col">
                                        Nombre d'élève
                                    </th>
                                    <th scope="col">
                                        Sujet
                                    </th>
                                     <th scope="col">
                                        Duree en minute
                                    </th>
                                     <th scope="col">
                                        Date de l'épreuve
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for epreuve in epreuve %}
                                    <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                   
                                        <td>
                                            <a href="{{path('epreuveCours',{'id':epreuve.id})}}">{{epreuve.getNomModule |capitalize }}<a/>
                                        </td>
                                        <td>
                                            {{epreuve.getClasse |capitalize }}
                                        </td>
                                        <td>
                                            {{epreuve.getNombreEleve |capitalize }}
                                        </td>
                                         <td>
                                            {{epreuve.getSujet |capitalize }}
                                        </td>
                                         <td>
                                            {{epreuve.getDuree  |capitalize }}
                                        </td>
                                         <td>
                                             {{epreuve.getDateEpreuve  |date("d/m/Y") }}
                                        </td>
                                        <td>
                                        {% if is_granted('ROLE_ADMIN') %}
    

                                            <a href=""><span class="material-icons">
                                                create
                                            </span></a>
                                        </td>
                                        <td>
                                            <a href="{{path('liste_epreuves',{'supp':epreuve.id})}}" class="text-white">
											<span class="material-icons" title="Supprimer le vocabulaire">
												delete
											</span>
										</a>
                                        </td>
                                    {% endif %}
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
{% if is_granted('ROLE_ADMIN') %}
             {{ form_start(form) }}
                    {{ form_label(form.codeModule, 'Code du module : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.codeModule, {'attr': {'class': 'form-control'}}
					) }}

					{{ form_label(form.nomModule, 'Nom du module : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.nomModule, {'attr': {'class': 'form-control'}}
					) }}

                    {{ form_label(form.classe, 'Classe : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.classe, {'attr': {'class': 'form-control'}}
					) }}

                    {{ form_label(form.nombreEleve, "Nombre d'élèves : ", {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.nombreEleve, {'attr': {'class': 'form-control'}}
					) }}

                    {{ form_label(form.sujet, 'Sujet : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.sujet, {'attr': {'class': 'form-control'}}
					) }}

                    {{ form_label(form.duree, 'Duree (en minute): ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.duree, {'attr': {'class': 'form-control'}}
					) }}

                    
                     {{ form_label(form.dateEpreuve, "Date de l'épreuve: ", {'label_attr': {'class': ''}}
					) }}
					{{ form_widget(form.dateEpreuve, {'attr': {'class': 'multiple'}}
					) }}

                      {{ form_label(form.utilisateurs, "Choix du professeur et du surveillant : ", {'label_attr': {'class': 'browser-default'}}
					) }}
					{{ form_widget(form.utilisateurs, {'attr': {'class': 'browser-default'}}
					) }}


				{{ form_widget(form.ajouterEpreuve, { 'label': "Ajouter l'épreuve", 'attr': {'class': 'btn font-weightbold bg-primary text-white mx-auto text-center'}}) }}

               
                
				{{ form_end(form) }}
                 

{% endif %}
        </div>
<script>
   document.getElementById("ajout_epreuve_dateEpreuve_date_month").classList.add('browser-default');
   document.getElementById("ajout_epreuve_dateEpreuve_date_day").classList.add('browser-default');
   document.getElementById("ajout_epreuve_dateEpreuve_date_year").classList.add('browser-default');
   document.getElementById("ajout_epreuve_dateEpreuve_time_hour").classList.add('browser-default');
   document.getElementById("ajout_epreuve_dateEpreuve_time_minute").classList.add('browser-default');
</script>

{% endblock %}