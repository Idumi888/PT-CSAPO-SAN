{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Ajout d'élève{% endblock %}
{% block content %}

{% block stylesheets %}
			<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
			<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
			<link href="../css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
{% endblock %}



<div class="container-fluid">   
        <div class="row justify-content-center">
            <h1 class="text-center text-primary p-4"> - Modification d'un élève</h1>
        </div>
          <div class="row justify-content-center">
           
        </div>
        {{ form_start(form) }}
				<div class="form-group mx-auto text-center w-25 p-3">
					{{ form_label(form.nom, 'Nom : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}
					) }}
					{{ form_label(form.prenom, 'Prenom : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}
					) }}
					{{ form_label(form.photo, 'Photo : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.photo, {'attr': {'class': 'form-control'}}
					) }}

                   
				</div>
                <div class="form-group mx-auto text-center w-25 p-3">
				{{ form_widget(form.modifier_eleve, { 'label': "Modifier l'élève", 'attr': {'class': 'btn font-weightbold bg-primary text-white mx-auto text-center'}}) }}
				</div>
				{{ form_end(form) }}
</div>        

{% endblock %}